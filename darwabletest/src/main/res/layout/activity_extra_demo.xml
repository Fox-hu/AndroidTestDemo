<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="16px" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="336px"
        android:paddingBottom="16px"
        >

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/abnormal_user_refresh"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginEnd="8px"
            android:layout_weight="1"
            >

            <android.support.v7.widget.RecyclerView
                android:id="@+id/abnormal_user_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </android.support.v4.widget.SwipeRefreshLayout >

        <ImageView
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginStart="8px"
            android:layout_marginEnd="8px"
            android:layout_weight="1"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/user_location_rv"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginStart="8px"
            android:layout_weight="1"
            />

    </LinearLayout >


    <android.support.v7.widget.RecyclerView
        android:id="@+id/contacts_rv"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_marginBottom="16px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60px" >
    </LinearLayout >

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/all_user_refresh"
        android:layout_width="match_parent"
        android:layout_height="260px"
        android:layout_marginEnd="8px" >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/all_user_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v4.widget.SwipeRefreshLayout >

</LinearLayout >
